<table class="table">
      <tr>
      <td colspan="2"><h3> Listado de Favores </h3></td>
      <td colspan="1"> 
      <% if current_user and can? :create, Favor %>
                  <%= link_to "Agregar", new_favor_path() , class: 'btn btn-success btn-sm',  action: "new"%>
            <% end %>
      </td>
      <td colspan="2"></td>
      <tr>
            <th> Foto </th>
            <th> Titulo</th>
            <th> Ubicacion</th>

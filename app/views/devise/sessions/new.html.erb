
<div class="row" style="margin-top: 30px;">
  <div class="col-xs-12 col-sm-3" style="padding-top: 65px;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
      :html => { :style => 'margin-left:40%;' }) do |f| %>
      <h2>Iniciar Sesion</h2>
      <div class="field">
        <%= f.label :Correo %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :ContraseÃ±a %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Aceptar" %>
      </div>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-9">
    <%= link_to "/" do %>
      <%= image_tag "colage.jpg" , class:"img-responsive", style: "max-height: 500px; margin-right:auto; margin-left:auto;" %>
    <% end %>
  </div>
</div>

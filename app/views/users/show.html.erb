<!-- LISTADO DE MIS FAVORES -->

<div id="favores" class="row barraElemento" >     
	<div class="row">
		<div class="col-md-12"><h2>Mis Favores Publicados</h2></div>
	</div>

	<div class="row" style="background-color:#F2F2F2">
		<div class="col-md-12">
			<table class="table">
				<tr>
            		<th> Foto </th>
            		<th> Titulo</th>
            		<th> Ubicacion</th>
            		<th> Descripci√≥n </th>
            		<th> Estado </th>
      			</tr>
      		<% @favores.each do |favor| %>
            	<tr>
                	<td> 
                <%= link_to favor do %>
                    <% if favor.foto == '' %>
                        <%= image_tag "http://www.libreriasigal.com/images/sin_foto.png", :alt => "Sin Foto",  height: 'auto', width: '70', class: "img-rounded", style:"" %>
                        <% else %>
                              <%= image_tag favor.foto , :alt => "Foto",  
                              height: 'auto', width: '70', style:"" %>
                        <% end %>
                    <% end %>
                  	</td>
                  	<td> <%= link_to favor.titulo, favor %> </td>
                  	<td> <%= link_to favor.ubicacion, favor %> </td>
                  	<td> <%= link_to favor.descripcion, favor %> </td>
                  	<td> <%= link_to favor.estado, favor %> </td>
           		</tr>
      		<% end %>
			</table>
		</div>
	</div>
</div>

